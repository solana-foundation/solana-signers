{
  "name": "@solana-signers/workspace",
  "version": "0.1.0",
  "private": true,
  "description": "Unified Solana transaction signing across multiple backends",
  "type": "module",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "eslint packages --ext .ts",
    "format": "prettier --write \"packages/**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,json,md}\"",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@solana/eslint-config-solana": "^5.0.0",
    "@solana/prettier-config-solana": "0.0.5",
    "@types/node": "^24.7.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-plugin-jest": "^29.0.0",
    "globals": "^15.11.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "prettier": "@solana/prettier-config-solana",
  "packageManager": "pnpm@10.14.0"
}
